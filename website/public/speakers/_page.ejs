<div id="hero" class="pt2 pb2">
  <div class="container-fluid">
    <div class="row">
      <div class="col-xs-10 push-xs-1 text-xs-center">

        <h1><%- name %></h1>
          <div class="col-xs-10 push-xs-1 col-sm-6 push-sm-3 col-md-4 push-md-4">

            <div class="card ">
              <img src="<%- avatar %>" alt="<%- name %>'s wonderful face">
            </div>
            <p>
              <% if(contact.ravelry) { %>
                <a href="//ravelry.com/people/<%- contact.ravelry %>" class="btn btn-primary btn-sm mb1" title="ravelry.com">üêë <%- contact.ravelry %></a>
                <br>
              <% } %>

              <% if(contact.twitter) { %>
                <a href="//twitter.com/<%- contact.twitter %>" class="btn btn-primary btn-sm mb1" title="twitter"><i class="fa fa-twitter"></i> <%- contact.twitter %></a>
                <br>
              <% } %>

              <% if(contact.github) { %>
                <a href="//github.com/<%- contact.github %>" class="btn btn-primary btn-sm mb1" title="github"><i class="fa fa-github"></i> <%- contact.github %></a>
                <% } %>
              </p>
          </div>

        </div>

    </div>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-xs-12 pt2">
      <div class="content mb4">
        <h2><%- talk.title %></h2>

        <% if(talk.slides) {%>
          <a href="<%- talk.slides %>">Slides</a>
        <% } %>

        <div><%- talk.description %></div>

        <% if(talk.video) {%>
          <div class="embed-responsive embed-responsive-16by9">
            <iframe class="embed-responsive-item" src="<%- talk.video %>" allowfullscreen></iframe>
          </div>
        <% } %>
      </div>
    </div>
  </div>
</div>
